                  <ImageView fx:id="image_ztratit" fitHeight="150.0" fitWidth="150.0" onMouseClicked="#ztratit_predmet" onMouseEntered="#button_on_hover" onMouseExited="#button_off_hover" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@buttons/ztratit.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="image_pouzit" fitHeight="150.0" fitWidth="150.0" onMouseClicked="#pouzit_predmet" onMouseEntered="#button_on_hover" onMouseExited="#button_off_hover" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@buttons/pouzit.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</Pane>
